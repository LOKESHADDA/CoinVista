<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CoinVista</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: url('/img/Crypto.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }

        .overlay-dark {
            background-color: rgba(0, 0, 0, 0.75);
            min-height: 100vh;
            padding-bottom: 40px;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.85);
        }

        .container {
            padding-top: 30px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        table {
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
        }

        th, td {
            color: #fff;
        }

        .form-control, .btn {
            border-radius: 6px;
        }

        .form-control {
            background-color: rgba(255,255,255,0.1);
            color: #fff;
        }

        .btn-primary {
            background-color: #00c896;
            border-color: #00c896;
        }

        footer {
            color: #aaa;
            font-size: 0.9rem;
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="overlay-dark">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">CoinVista</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Investment">My Investments</a></li>
                        <li class="nav-item"><a class="nav-link" href="/About">About Us</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserEmail") != null)
                        {
                            <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            @RenderBody()
        </div>

        <footer>
            <p>&copy; 2025 CoinVista Team</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>